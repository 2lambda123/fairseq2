if [[ $# -ne 0 ]]; then
    echo "Usage: lint-py" >&2

    exit 1
fi

tools_dir=$(cd "$(dirname "$0")" && pwd)

"$tools_dir/porcelain/run-flake8" "$tools_dir/../"
"$tools_dir/porcelain/run-mypy"   "$tools_dir/../"
